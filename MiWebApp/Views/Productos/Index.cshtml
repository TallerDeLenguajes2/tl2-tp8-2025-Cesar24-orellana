@model IEnumerable<EProductos.Productos>

<section class="container mt-4">
    <header class="d-flex justifity-content-between aling-items-center mb-4">
        <h2 class="text-primary">Lista de Productos</h2>
        <p>
            <a asp-controller="Productos" asp-action="Create" class="btn btn-primary mt-left-4">Crear Nuevo Producto</a>
        </p>
    </header>
    <table class="table table-striped table-hover text-center aling-middle shadow-sm">
        <thead class="table-dark">
            <tr>
                <th style="width: 10%;">Id</th>
                <th style="width: 20%;">Precio</th>
                <th style="width: 50%;">Descripcion</th>
                <th style="width: 20%;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@producto.IdProducto</td>
                    <td class="text-success fw-bold">$@producto.Precio</td>
                    <td class="text-break">@producto.Descripcion</td>
                    <td>
                        <a asp-controller="Productos" asp-action="Edit" asp-route-id="@producto.IdProducto"
                            class="btn btn-warning">Modificar</a>
                        <a asp-controller="Prodcutos" asp-action="Delete" asp-route-id="@producto.IdProducto"
                            class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>