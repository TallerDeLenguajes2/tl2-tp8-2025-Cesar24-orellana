@model EProductos.Productos

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container mt-4" style="max-width: 600px;">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white text-center rounded-top-4">
            <h3 class="m.2">@ViewData["Title"]</h3>
        </div>

        <div class="card-body p-4">
        
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="IdProducto">

                <p class="text-center fs-5 mb-4">
                    ¿Está seguro que desea <strong class="text-danger">Eliminar</strong> este producto?
                </p>

                <div class="mb-3">
                    <label class="form-label fw-bold">Descripción</label>
                    <div class="form-control bg-light">@Model.Descripcion</div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Descripción</label>
                    <div class="form-control bg-light">$@Model.Precio</div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary px-4">Volver</a>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />