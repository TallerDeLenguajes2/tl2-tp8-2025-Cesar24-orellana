@model EPresupuestos.Presupuestos

@{
    ViewData["Title"] = "Eliminar Presupuesto";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<form asp-action="DeleteOk" method="post" class="border p-3 rounded">
    <input type="hidden" asp-for="IdPresupuesto" />

    <fieldset>
        <legend>Datos del Presupuesto</legend>

        <label class="form-label">ID Presupuesto</label>
        <input class="form-control" value="@Model.IdPresupuesto" disabled />

        <label class="form-label">Nombre del destinatario</label>
        <input class="form-control" value="@Model.NombreDestinatario" disabled />

        <label class="form-label">Fecha de creaci√≥n</label>
        <input class="form-control" value="@Model.FechaCreada" disabled />
    </fieldset>

    <section class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
        <button type="submit" class="btn btn-danger">Borrar</button>
    </section>
</form>
