@model EPresupuestos.Presupuestos

@{
    ViewData["Title"] = "Editar Presupuesto";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditOk" method="post">
    <input type="hidden" asp-for="IdPresupuesto" />

    <label asp-for="NombreDestinatario">Nombre del destinatario</label>
    <input asp-for="NombreDestinatario" class="form-control" />
    <span asp-validation-for="NombreDestinatario" class="text-danger"></span>

    <label asp-for="FechaCreada">Fecha de creaci√≥n</label>
    <input asp-for="FechaCreada" type="date" class="form-control"  />
    <span asp-validation-for="FechaCreada" class="text-danger"></span>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>

<partial name="_ValidationScriptsPartial" />