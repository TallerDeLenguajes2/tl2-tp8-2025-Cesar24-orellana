@model IEnumerable<EPresupuestos.Presupuestos>

@{
    ViewData["Title"] = "Presupuestos";
}
<section class="container mt-4">
    <header class="d-flex justifity-content-between align-items-center mb-4">
        <h2 class="text-primary">@ViewData["Title"]</h2>
    </header>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Fecha Creaci√≥n</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.IdPresupuesto</td>
                    <td>@p.NombreDestinatario</td>
                    <td>@p.FechaCreada</td>
                    <td>
                        <a asp-action="Detalle" asp-route-id="@p.IdPresupuesto" class="btn btn-primary btn-sm">Ver</a>
                        <a asp-action="Eliminar" asp-route-id="@p.IdPresupuesto" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>